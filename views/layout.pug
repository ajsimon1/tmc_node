doctype html
html(lang="eng")

    meta(charset="utf-8")
    meta(name="viewport",
        content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', 
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", 
        crossorigin="anonymous")
    link(rel='stylesheet', href='/css/main.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Alata")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Monda")

    head
        if title
            title= `tMC | ${title}`
        else
            title tMC

    body
        header
            nav.navbar.navbar-expand-sm.navbar-dark.fixed-top
                a(href="/").navbar-brand tMC
                button(type="button" data-toggle="collapse" data-target="#navbar-collapse-content" aria-controls="navbar-collapse-content" aria-expanded="false" aria-label="Toggle navigation").navbar-toggler
                    span.navbar-toggler-icon
                div(id="navbar-collapse-content").collapse.navbar-collapse
                    ul(id="navbar").navbar-nav.mr-auto
                        li(id="home-nav" class=title=="Home"?"navbar-item pr-2 mr-2 active":"navbar-item pr-2 mr-2")
                            a(href="/").nav-link Home
                        li(id="rules-nav" class=title=="Rules"?"navbar-item pr-2 mr-2 active":"navbar-item pr-2 mr-2")
                            a(href="/rules").nav-link Rules
                        li(id="honors-nav" class=title=="Honors"?"navbar-item pr-2 mr-2 active":"navbar-item pr-2 mr-2")
                            a(href="#").nav-link Honors
                        li(id="gallery-nav" class=title=="Gallery"?"navbar-item pr-2 mr-2 active":"navbar-item pr-2 mr-2")
                            a(href="#").nav-link Gallery
            div(style="background-image: url('../images/golf_main_bkrnd_3.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;").view
                block content

        


        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
